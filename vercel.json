{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "api/index.js" },
    { "src": "/(.*)", "dest": "/frontend/build/$1" }
  ]
}
// This configuration file is for deploying a Node.js API and a React frontend to Vercel.
// The API is located in the "api" directory and the frontend is in the "frontend" directory.